extends  template/template.jade

append config
  -currentPage = "Login-page"

block main
    .main-home
        img(src="img/logo.png").logo
        form.login-form
            .login-form__item
                label(for='username').login-form__label Nombre de usario
                input(type='text' name='username' id='username' ).login-form__input
            .login-form__item
                label(for='password').login-form__label Contraseña
                input(type='password' name='password' id='password' ).login-form__input
            input(type='submit' value='Ingresar').login-form__submit.button.cta

        .reset-password
            h3 ¿Ha olvidado su contraseña?
                a(href="#") Recuperar